import {RouteObject} from "react-router-dom";
import React from "react";


const Layout = React.lazy(() => import("../layout/Layout.tsx"));
const Home = React.lazy(() => import("../containers/home/HomeContainer.tsx"));
const AboutUs = React.lazy(() => import("../containers/about_us/AboutUsContainer.tsx"));
const Settings = React.lazy(() => import("../containers/settings/SettingsContainer.tsx"));
const Message = React.lazy(() => import("../containers/message/MessageContainer.tsx"));
const NotFound = React.lazy(() => import("../containers/not_found/NotFoundContainer.tsx"));


const routes: RouteObject[] = [
    {
        path: "/",
        element: <Layout/>,
        children: [
            {
                index: true,
                element: <Home/>
            },

            {
                path: "/about_us",
                element: <AboutUs/>
            },

            {
                path: "/settings",
                element: <Settings/>
            }
        ]
    },
    {
        path: "/message/:id",
        element: <Message/>
    },
    {
        path: "*",
        element: <NotFound/>
    }
];

export default routes;